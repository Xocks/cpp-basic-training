#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    double large_num = 123456789.0;
    double small_num = 0.000000123;
    
    // 使用 scientific 以科学计数法格式输出
    cout << "科学计数法表示:" << endl;
    cout << scientific << large_num << endl; // 输出: 1.234568e+08
    cout << scientific << small_num << endl; // 输出: 1.230000e-07
    
    // 结合 setprecision 控制精度
    cout << scientific << setprecision(3);
    cout << "精度控制:" << endl;
    cout << large_num << endl; // 输出: 1.235e+08
    cout << small_num << endl; // 输出: 1.230e-07
    
    return 0;
}
